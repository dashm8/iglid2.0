@model SetPsnViewModel
@{
    ViewData["Title"] = "SetPSN";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SetPSN</h2>

<p class="text-info">
    Set a PSN Account for your User so you can play (:
</p>

<form asp-controller="Manage" asp-action="SetPSN" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <h4>Set your password</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PSN" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PSN" class="form-control" />
            <span asp-validation-for="PSN" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Set PSN</button>
        </div>
    </div>
</form>