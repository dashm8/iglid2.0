@model iglid.Models.GameViewModels.CreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>CreateViewModel</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="bestof" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="bestof" class="form-control">
                    <option value="1">best of one</option>
                    <option value="3">best of three</option>
                    <option value="5">best of five</option>
                </select>
                <span asp-validation-for="bestof" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="mode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="mode" class="form-control">
                    <option value="variant">variant</option>
                    <option value="SND">Search And Destroy</option>
                    <option value="CTF">capture the flag</option>
                    <option value="HP">hardpoint</option>
                </select>
                <span asp-validation-for="mode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
