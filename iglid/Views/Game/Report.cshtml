@model iglid.Models.GameViewModels.ReportViewModel

@{
    ViewData["Title"] = "Report";
}


<form asp-action="Report">
    <div class="form-horizontal">
        <h4>Report</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-md-2 control-label">@Model.t1name</label>
            <div class="col-md-10">
                <input asp-for="t1score" class="form-control" />
                <span asp-validation-for="t1score" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">@Model.t2name</label>
            <div class="col-md-10">
                <input asp-for="t2score" class="form-control" />
                <span asp-validation-for="t2score" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back To Match", "Index",new {id = (int)ViewData["Id"] })
</div>

